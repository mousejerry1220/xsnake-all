<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsnake="http://www.xsnake.org/schema/xsnake"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/mvc 
	http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
	http://www.xsnake.org/schema/xsnake
	http://www.xsnake.org/schema/xsnake/xsnake.xsd">

	<context:component-scan base-package="org.xsnake" >
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service" />
	</context:component-scan>

	<xsnake:client>
		<xsnake:propertys>
			<xsnake:property name="messageQueue" value="rmq://127.0.0.1:5672?username=guest&amp;password=guest" />
			<xsnake:property name="scanPackage" value="org.xsnake" />
			<xsnake:property name="initTimeout" value="5" />
		</xsnake:propertys>
	</xsnake:client>

</beans>